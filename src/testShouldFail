INSERT INTO Persons
VALUES('Rus',
       '19940202-7777',
       'Hanna Cloneish',
       'Rus',
       'Mos',
       150000);

UPDATE Persons SET ('Rus','19940202-7777','Hanna Cloneish','Rus','Mos',150000)
WHERE ( country = 'Rus',
        personnummer = '19940202-7777',
        name = 'Hanna Cloneish',
        locationcountry = 'Rus'
        locationarea = 'San',
        budget = 150000);

-- Test of Person that person cant afford moving --

INSERT INTO Countries
VALUES('Den');

INSERT INTO Areas
VALUES('Jyl','Den',30000);
INSERT INTO Towns
VALUES('Jyl','Den');

INSERT INTO Areas
VALUES('Ros','Den',500000);
INSERT INTO Cities
VALUES('Ros','Den',0);

INSERT INTO Persons
VALUES('Den',
       '19940202-3333',
       'John Clonesson',
       'Den',
       'Jyl',
       5);

INSERT INTO Persons
VALUES('Den',
       '19940202-4444',
       'Lilly Clonesson',
       'Den',
       'Ros',
       150000);

INSERT INTO ROADS
VALUES('Den',
       'Jyl',
       'Den',
       'Ros',
       'Den',
       '19940202-4444',
       111);

UPDATE Persons SET ('Den','19940202-3333','John Clonesson','Den','Jyl',5)
WHERE ( country = 'Den',
        personnummer = '19940202-3333',
        name = 'John Clonesson',
        locationcountry = 'Den'
        locationarea = 'Ros',
        budget = 5);


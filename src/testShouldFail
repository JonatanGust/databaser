
-- Test of Person that you should not update the Government --

INSERT INTO Countries
VALUES('Swe');

INSERT INTO Areas
VALUES('Gbg','Swe',2000000);
INSERT INTO Cities
VALUES('Gbg','Swe',0);

INSERT  INTO  Persons
VALUES(' ', ' ', 'The government', 'Swe', 'Gbg', 100000000000);

UPDATE Persons SET (' ', ' ', 'The government', 'Swe', 'Gbg', 100000000000)
WHERE ( country = ' ',
        personnummer = '19950403-1990',
        name = 'The government',
        locationcountry = 'Swe'
        locationarea = 'Gbg',
        budget = 100000000000);

-- Test of Person that you are not allowed to update the country or personnummer of a person --

INSERT INTO Countries
VALUES('Swe');

INSERT INTO Areas
VALUES('Gbg','Swe',2000000);
INSERT INTO Cities
VALUES('Gbg','Swe',0);

INSERT INTO Persons
VALUES('Swe',
       '19960708-2600',
       'Theo Clone',
       'Swe',
       'Gbg',
       150000 );

UPDATE Persons SET ('Swe','19960708-2600','Theo Clone','Swe','Gbg',150000)
WHERE ( country = 'Swe',
        personnummer = '19960708-0000',
        name = 'Theo Clone',
        locationcountry = 'Swe'
        locationarea = 'Gbg',
        budget = 150000);


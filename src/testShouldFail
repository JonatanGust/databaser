-- Test of Hotel Update where only the owner of an hotel can be changed-- KLAR!!

INSERT INTO Countries
VALUES('Fin');

INSERT INTO Areas
VALUES('Hel','Fin',2000000);
INSERT INTO Cities
VALUES('Hel','Fin',0);

INSERT INTO Areas
VALUES('Esbo','Fin',2000000);
INSERT INTO Cities
VALUES('Esbo','Fin',0);

INSERT INTO Persons
VALUES('Fin',
       '19960708-2664',
       'Theodor Sturesson clone',
       'Fin',
       'Hel',
       150000 );

INSERT INTO Hotels
VALUES('Hotel in Finland',
      'Fin',
      'Hel',
      'Fin',
      '19960708-2664');

UPDATE Hotels SET name = 'Hotel in Finland', locationcountry = 'Fin', locationarea = 'Esbo', ownercountry = 'Fin', ownerpersonnummer = '19960708-2664'
WHERE ( locationcountry = 'Fin'
    AND locationarea = 'Hel'
    AND ownercountry = 'Fin'
    AND ownerpersonnummer = '19960708-2664');
